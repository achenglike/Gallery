<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:layerType="software">
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/gallery_left_margin"
        android:layout_marginRight="@dimen/gallery_right_margin"
        android:layout_marginTop="@dimen/gallery_top_margin"
        android:layout_marginBottom="@dimen/gallery_bottom_margin"
        android:overScrollMode="never"
        android:clipChildren="false" />
</RelativeLayout>
